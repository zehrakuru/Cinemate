<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/scene_bg"
    tools:context=".ui.payment.PaymentFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/border_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textSize="36sp"
                android:fontFamily="@font/rubik_bold"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"/>

            <EditText
                android:id="@+id/payment_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/lavender_border"
                android:drawableStart="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/rubik"
                android:hint="Name"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/payment_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:drawableStart="@drawable/icon_credit_card"
                android:drawablePadding="8dp"
                android:fontFamily="@font/rubik"
                android:hint="Credit Card Number"
                android:padding="8dp"
                android:textColor="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/payment_month"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".7"
                    android:textSize="18sp"
                    android:hint="Month"
                    android:fontFamily="@font/rubik"
                    android:padding="8dp"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/icon_calendar_month"
                    android:drawablePadding="5dp"
                    android:background="@drawable/lavender_border"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/payment_year"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.6"
                    android:textSize="18sp"
                    android:hint="Year"
                    android:fontFamily="@font/rubik"
                    android:padding="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:inputType="date"
                    android:drawableStart="@drawable/icon_calendar_year"
                    android:drawablePadding="5dp"
                    android:background="@drawable/lavender_border"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/payment_cvc"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.6"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:hint="CVC"
                    android:fontFamily="@font/rubik"
                    android:padding="8dp"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/icon_credit_card"
                    android:drawablePadding="5dp"
                    android:background="@drawable/lavender_border"
                    android:textColor="@color/black" />
            </LinearLayout>

            <EditText
                android:id="@+id/payment_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:drawableStart="@drawable/icon_home"
                android:drawablePadding="8dp"
                android:fontFamily="@font/rubik"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:padding="8dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Pay"
                android:id="@+id/payment_button"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/lavender"
                android:fontFamily="@font/rubik_bold"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>